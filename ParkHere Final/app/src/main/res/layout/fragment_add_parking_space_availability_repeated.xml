<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_psa_repeated_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Add Parking Space Repeated Availability Form -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:weightSum="1">

            <!-- Weekday Spinner -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="2dp"
                android:text="REPEAT ON:"
                android:textStyle="bold"
                android:gravity="left"
                android:textSize="16dip"/>

            <Spinner
                android:id="@+id/add_psar_weekday_spinner"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- Start Date Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2" >

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" >

                    <EditText
                        android:hint="Start Date [YYYY-MM-DD]"
                        android:id="@+id/add_psar_start_date"
                        android:inputType="date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/add_psar_startDatePicker"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/date" />

            </LinearLayout>

            <!-- End Date Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2" >

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                    <EditText
                        android:hint="End Date [YYYY-MM-DD]"
                        android:id="@+id/add_psar_end_date"
                        android:inputType="date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/add_psar_endDatePicker"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/date" />

            </LinearLayout>

            <!-- Start Time Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Start Time" />

            <Spinner
                android:id="@+id/add_psar_start_time_spinner"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- End Time Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="End Time" />

            <Spinner
                android:id="@+id/add_psar_end_time_spinner"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- Price Per Hour Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="Price Per Hour [$XX.XX]"
                    android:id="@+id/add_psar_price_per_hour"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <!-- Add Parking Space Availability Button -->
            <Button
                android:id="@+id/add_psar_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="#2176FF"
                android:textColor="#FFFFFF"
                android:text="Add Space Repeated Availability"/>

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:stretchColumns="0,1"
                android:id="@+id/add_psar_table"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </TableLayout>

        </LinearLayout>
        <!-- Add Parking Space Repeated Availability Form Ends -->

    </RelativeLayout>

</ScrollView>