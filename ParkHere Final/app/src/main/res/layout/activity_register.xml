<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    tools:context="com.example.parkhere.main.RegisterActivity"

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#3ABEFF">

        <!-- Register Form -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:weightSum="1">

            <!-- Logo -->
            <ImageView android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal" />

            <!-- Email Label -->
            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:hint="Email"
                android:textColorHint="#bbbbbb"
                android:textCursorDrawable="@null"
                android:drawableLeft="@drawable/email"/>

            <!-- Password Label -->
            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_default_bg"
                android:layout_marginTop="-2dp"
                android:padding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#bbbbbb"
                android:textCursorDrawable="@null"
                android:drawableLeft="@drawable/password"/>

            <!-- Reenter Password Label -->
            <EditText
                android:id="@+id/register_reenter_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_default_bg"
                android:layout_marginTop="-2dp"
                android:padding="10dp"
                android:hint="Reenter Password"
                android:inputType="textPassword"
                android:textColorHint="#bbbbbb"
                android:textCursorDrawable="@null"
                android:drawableLeft="@drawable/password"/>

            <!-- Primary Role -->
            <EditText
                android:id="@+id/register_primary_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_default_bg"
                android:layout_marginTop="-2dp"
                android:padding="10dp"
                android:text="Primary Role"
                android:drawableLeft="@drawable/user"/>

            <RadioGroup
                android:id="@+id/register_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_bg"
                android:layout_marginTop="-2dp"
                android:padding="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/register_radio_seeker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="#3ABEFF"
                    android:text="Seeker" />

                <RadioButton
                    android:id="@+id/register_radio_provider"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#3ABEFF"
                    android:text="Provider" />
            </RadioGroup>

            <!-- Register Button -->
            <Button
                android:id="@+id/register_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="#2176FF"
                android:textColor="#FFFFFF"
                android:text="Sign Up"/>

            <!-- Login Link -->
            <TextView android:id="@+id/register_link_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:text="Already a member? Login"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16dip"/>

        </LinearLayout>
        <!-- Register Form Ends -->

    </RelativeLayout>
</ScrollView>

