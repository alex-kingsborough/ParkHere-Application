<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    tools:context="com.example.parkhere.main.HomeActivity"

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#3ABEFF">

        <!-- Login Form -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:weightSum="1">

            <!-- Logo -->
            <ImageView android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal" />

            <!-- Email Label -->
            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:hint="Email"
                android:textColorHint="#bbbbbb"
                android:textCursorDrawable="@null"
                android:drawableLeft="@drawable/email"/>

            <!-- Password Label -->
            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_bg"
                android:layout_marginTop="-2dp"
                android:padding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#bbbbbb"
                android:textCursorDrawable="@null"
                android:drawableLeft="@drawable/password"/>

            <!-- Login Button -->
            <Button
                android:id="@+id/login_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="#2176FF"
                android:textColor="#FFFFFF"
                android:text="Login"/>

            <!-- Forgot Password Link -->
            <TextView android:id="@+id/login_forgot_pw_link"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:text="Forgot your password?"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16dip"/>

            <!-- Register Link -->
            <TextView android:id="@+id/login_link_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Sign Up for ParkHere"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16dip"/>

            <!-- About Link -->
            <ImageView android:src="@drawable/question"
                android:id="@+id/login_link_about"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        <!-- Login Form Ends -->

    </RelativeLayout>
</ScrollView>

