<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="#3ABEFF">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:srcCompat="@drawable/capture"
            android:id="@+id/imageView"
            android:layout_weight="0.18" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_bg"
            android:layout_margin="3dp">

            <TextView
                android:text="@string/address"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/space_address_Text_2"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/space_address_editText"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_bg"
            android:layout_margin="3dp">

            <TextView
                android:text="@string/total_price"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/space_price_Text_2"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/space_editText_2"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_bg"
            android:layout_margin="3dp">

            <TextView
                android:text="Distance: "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/space_distance_Text_2"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/space_distance_editText"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rounded_corner_bg"
            android:layout_margin="3dp">

            <TextView
                android:text="Rating: "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/space_rating_Text"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/space_rating_editText"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rounded_corner_bg"
            android:layout_margin="3dp">

            <TextView
                android:text="Size: "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/space_Size_Text_2"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/space_Size_editText"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rounded_corner_bg"
            android:layout_margin="3dp">

            <TextView
                android:text="Permit Requirement: "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/space_Permit_Text"
                android:layout_weight="1" />

            <TextView
                android:layout_width="143dp"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/space_Permit_editText"
                android:layout_weight="0.37" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_bg"
            android:layout_margin="3dp">

            <TextView
                android:text="Cancellation Policy: "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/space_Cancel_Text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="15dp"
                android:id="@+id/space_Cancel_editText"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_bg"
            android:layout_margin="3dp">

            <TextView
                android:text="Provider Rating: "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/space_ProviderRate_Text"
                android:layout_weight="1" />

            <TextView
                android:layout_width="143dp"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/space_ProviderRate_editText"
                android:layout_weight="0.37" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_bg"
            android:layout_margin="3dp">

            <TextView
                android:text="Rating: "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Rating_text"
                android:layout_weight="1" />

            <TextView
                android:layout_width="143dp"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/Rate_editText"
                android:layout_weight="2.75" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_bottom_bg"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Addiitional Comments:"/>

            <TextView
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:id="@+id/comments_editText"/>
        </LinearLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserve Space"
            android:id="@+id/reserve_space_btn"

            />

    </LinearLayout>

</LinearLayout>