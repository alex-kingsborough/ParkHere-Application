<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_ps_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <!-- Edit Parking Space Form -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:weightSum="1">

            <!-- Parking Space Image-->
            <ImageView android:src="@drawable/image_placeholder"
                android:layout_marginTop="100dp"
                android:id="@+id/edit_ps_image"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal" />

            <!-- Street Address Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="Address"
                    android:id="@+id/edit_ps_address"
                    android:inputType="textPostalAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <!-- City Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="City"
                    android:id="@+id/edit_ps_city"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <!-- State Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="State"
                    android:id="@+id/edit_ps_state"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <!-- Zip Code Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="Zip Code"
                    android:id="@+id/edit_ps_zipcode"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <!-- Country Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="Country"
                    android:id="@+id/edit_ps_country"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <!-- Type Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Space Type" />

            <Spinner
                android:id="@+id/edit_ps_type_spinner"
                android:padding="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- Handicap and Covered Parking Checkboxes -->
            <CheckBox
                android:id="@+id/editCbHandicap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Handicap" />

            <CheckBox
                android:id="@+id/editCbCoveredParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Covered Parking" />

            <!-- Permit Requirement Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Permit Requirement" />

            <Spinner
                android:id="@+id/edit_ps_permit_spinner"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- Cancellation Policy Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Cancellation Policy" />

            <Spinner
                android:id="@+id/edit_ps_cancellation_spinner"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- Additional Info -->
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="Additional Information"
                    android:id="@+id/edit_ps_additionalinfo"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <!-- Additional Pictures -->
            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="16dp"
                android:text="ADDITIONAL PARKING SPACE PICTURES"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="3" >

                <ImageView
                    android:id="@+id/pspic1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/image_placeholder" />

                <ImageView
                    android:id="@+id/pspic2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/image_placeholder" />

                <ImageView
                    android:id="@+id/pspic3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/image_placeholder" />

            </LinearLayout>

            <!-- Update Parking Space Button -->
            <Button
                android:id="@+id/edit_ps_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="#2176FF"
                android:textColor="#FFFFFF"
                android:text="Update Space"/>

        </LinearLayout>
        <!-- Edit Parking Space Form Ends -->

    </RelativeLayout>
</ScrollView>